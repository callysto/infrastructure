{
  "builders": [{
    "type": "openstack",
    "domain_id": "default",
    "region": "{{user `region`}}",
    "flavor": "{{user `flavor`}}",
    "security_groups": ["packer"],
    "image_name": "callysto-hub",
    "ssh_username": "centos",
    "source_image_name": "{{user `image_name`}}",
    "networks": ["{{user `network_id`}}"],
    "ssh_ip_version": 6,
    "ssh_pty": true,
    "metadata": {
      "build_date": "{{ timestamp }}"
    }
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo sed -i.bak -e '/Defaults.*requiretty/s/^/#/' /etc/sudoers"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "../ansible/plays/packer-hub.yml"
    }
  ]
}
