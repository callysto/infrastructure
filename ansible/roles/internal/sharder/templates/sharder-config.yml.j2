db_file: {{ sharder_app_dir }}/sharder.db
db_type: {{ sharder_db_type | default('sqlite') }}
domain: {{ sharder_domain }}
hubs:
{% for host in sharder_hubs %}
  - name: {{ host['name'] }}
{% if host['extra_shards'] is defined %}
    extra_shards: {{ host['extra_shards'] }}
{% endif %}
{% endfor %}
sharder_listen: {{ sharder_listen | default('127.0.0.1') }}
